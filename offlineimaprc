[general]
ui = ttyui
accounts = personal, redhat
pythonfile = ~/.offlineimap.py

[Account personal]
localrepository = fastmail-local
remoterepository = fastmail-remote
status_backend = sqlite

[Account redhat]
localrepository = redhat-local
remoterepository = redhat-remote
status_backend = sqlite

[Repository fastmail-local]
type = Maildir
localfolders = ~/mail/personal

[Repository fastmail-remote]
type = IMAP
remotehost = mail.messagingengine.com
remoteuser = timwade@fastmail.com
remotepasseval = get_authinfo_password("mail.messagingengine.com", "timwade@fastmail.com", "993")
ssl = yes
holdconnectionopen = yes
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository redhat-local]
type = Maildir
localfolders = ~/mail/redhat

[Repository redhat-remote]
type = Gmail
remoteuser = twade@redhat.com
remotepasseval = get_authinfo_password("imap.gmail.com", "twade@redhat.com", "993")
ssl = yes
holdconnectionopen = yes
realdelete = no
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
